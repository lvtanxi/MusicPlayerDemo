<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_background"
                >
    <com.raymondqk.raymusicplayer.customview.AvatarCircle
        android:id="@+id/avatar_list_item"
        android:layout_marginLeft="15dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar_joyce"
        app:StrokeColor="@color/white"
        app:StrokeWidth="2dp">
    </com.raymondqk.raymusicplayer.customview.AvatarCircle>
    <TextView
        android:id="@+id/tv_title_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/avatar_list_item"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:text="好想你"/>
    <TextView
        android:id="@+id/tv_artist_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/tv_title_list_item"
        android:layout_below="@+id/tv_title_list_item"
        android:layout_marginTop="5dp"
        android:text="朱主爱"/>


</RelativeLayout>